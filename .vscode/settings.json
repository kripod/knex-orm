{
  // Use ESLint instead of the integrated JS validator of Visual Studio Code
  "eslint.enable": true,
  "javascript.validate.enable": false,

  // Configure glob patterns for excluding files and folders in searches
  "search.exclude": {
    "**/node_modules": true,
    "**/lib": true,
    "**/coverage": true,
    "**/docs": true
  }
}
